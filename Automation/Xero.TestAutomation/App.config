<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
  </configSections>
  <specFlow>
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
    <unitTestProvider name="MsTest" />
  </specFlow>
  <appSettings>
    <add key="Url" value ="https://login.xero.com/" />
    <add key="TestDataPath" value="TestData.json" />
    <add key="Browser" value ="Chrome" /> <!--Only Chrome supported at this point-->
    <add key="SeleniumDriverPath" value ="" /> <!--If chromedriver.exe exists in another folder then feed the .exe path e.g. "file://c:\Xero\driver"-->
  </appSettings>
</configuration>